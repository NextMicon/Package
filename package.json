{
  "name": "nextmicon-package",
  "version": "1.0.0",
  "description": "NextMicon package distribution server",
  "scripts": {
    "dev": "vite",
    "serve": "pnpm dlx http-server dist -p 8080 -c-1",
    "serve:watch": "pnpm dlx browser-sync start --server dist --files 'dist/**/*' --port 3000",
    "build": "bash package.sh",
    "build:watch": "pnpm dlx nodemon --watch pkg --ext '*' --exec 'pnpm build'"
  },
  "devDependencies": {
    "vite": "^7.1.5"
  }
}
